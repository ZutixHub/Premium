task.wait()
repeat task.wait() until game:IsLoaded()

local Players = game:GetService("Players")
local player = Players.LocalPlayer

-- Supported Games
local SupportedGames = {
    [920587237]  = "https://raw.githubusercontent.com/ZutixHub/Premium/refs/heads/main/HouseCloner.lua",
    [383310974]  = "https://raw.githubusercontent.com/ZutixHub/Premium/refs/heads/main/HouseCloner.lua",
    [3647333358] = "https://raw.githubusercontent.com/ZutixHub/Premium/refs/heads/main/Evade.lua",
}

local EVADE_ID = 3647333358

local function SafeLoad(url, name)
    local data
    local ok, err = pcall(function()
        data = game:HttpGet(url)
    end)

    if not ok or not data or data == "" then
        player:Kick(name .. " failed to load.\nNetwork Error or Invalid Script.")
        return
    end

    local runOK, runErr = pcall(loadstring(data))
    if not runOK then
        player:Kick(name .. " Error:\n" .. tostring(runErr))
        return
    end
end

if game.PlaceId == EVADE_ID or game.GameId == EVADE_ID then
    SafeLoad(
        "https://raw.githubusercontent.com/ZutixHub/Premium/refs/heads/main/SystemCounter.lua",
        "SystemCounter"
    )
end

local scriptURL = SupportedGames[game.PlaceId] or SupportedGames[game.GameId]
if not scriptURL then
    player:Kick("This game is not supported by ZutixHub")
    return
end

-- Load main script
SafeLoad(scriptURL, "ZutixHub Script")
